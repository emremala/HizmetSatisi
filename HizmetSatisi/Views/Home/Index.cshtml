@{
    ViewBag.Title = "Anasayfa";
}

<section class="jumbotron text-xs-center">
    <div class="container">
        <h1 class="jumbotron-heading">HİZMET PİŞ, AĞZIMA DÜŞ</h1>
        <p class="lead text-muted">ÜCRETSİZ TEKLİF AL, KARŞILAŞTIR. 90.000 PROFESYONEL SENİ BEKLİYOR.</p>
        <p>
                @if (Convert.ToBoolean(Session["IS_HR"]))
                {
                    <button class="btn btn-primary"><a>@Html.ActionLink("Bilgileri Güncelle", "Manage", "Account", new { area = "" }, new { @style = "color: #fff; text-decoration: none;" }) </a></button>
                    <button class="btn btn-secondary"><a>@Html.ActionLink("Yönetim Paneli", "Seller", "Home", new { area = "" }, new { @style = "text-decoration: none;" })</a> </button>
                }
                else if (Convert.ToBoolean(Session["IS_ADMIN"]))
                {
                    <button class="btn btn-primary"><a>@Html.ActionLink("Bilgileri Güncelle", "Manage", "Account", new { area = "" }, new { @style = "color: #fff; text-decoration: none;" }) </a></button>
                    <button class="btn btn-secondary"><a>@Html.ActionLink("Yönetim Paneli", "Cust", "Home", new { area = "" }, new { @style = "text-decoration: none;" })</a> </button>
                }
                else if (Convert.ToBoolean(Session["IS_SYSADM"]))
                {
                    <button class="btn btn-primary"><a>@Html.ActionLink("Bilgileri Güncelle", "Manage", "Account", new { area = "" }, new { @style = "color: #fff; text-decoration: none;" }) </a></button>
                    <button class="btn btn-secondary"><a>@Html.ActionLink("Giriş Yap", "Login", "Account", new { area = "" }, new { @style = "text-decoration: none;" })</a> </button>
                }
                else
                {
                    <button class="btn btn-primary"><a>@Html.ActionLink("Kayıt Ol", "Register", "Account", new { area = "" }, new { @style = "color: #fff; text-decoration: none;" }) </a></button>
                    <button class="btn btn-secondary"><a>@Html.ActionLink("Giriş Yap", "Login", "Account", new { area = "" }, new { @style = "text-decoration: none;" })</a> </button>
                }


</p>
    </div>
</section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="popular">
                    <h2 class="popular-services">Tüm Teklifler</h2>
                    @foreach (var tenders in ViewBag.Tenders)
            {

                        <form class="form-horizontal" method="post" action="/Home/TenderGift">
                            <div class="col-sm-6 col-md-4" style="margin-bottom: 10px;">
                                <div class="thumbnail">
                                    <img src="@Url.Content(@tenders.TENDERIMAGE)" style=" width: 300px; height: 200px;" alt="Teklif" />
                                    <div class="caption">
                                        <h3>@tenders.TENDERNAME</h3>
                                        <p>@tenders.TENDERNOTE</p>
                                        
                                        <p><button id="@tenders.ID" class="btn btn-success col-sm-offset-4" name="btnTanderId" value="@tenders.ID"><i class="fa fa-credit-card"></i> Teklif Ver</button></p>
                                        @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
        
    </div>
   


