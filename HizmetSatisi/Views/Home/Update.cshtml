
@{
    ViewBag.Title = "Update";
}




<div class="panel panel-default">
    <div class="panel-heading">Güncelleme Paneli</div>
    <div class="panel-body">

       

            @foreach (var tenders in ViewBag.TenderUpdate)
            {
                <div class="form-group">
                            <div class="col-sm-6 col-md-4" style="margin-bottom: 10px;">
                                <div class="thumbnail">
                                    <img src="@Url.Content(@tenders.TENDERIMAGE)" style=" width 300px; height 200px;" alt="Teklif" />
                                    <div class="caption">
                                        <h3>@tenders.TENDERNAME</h3>
                                        <p>@tenders.TENDERNOTE</p>
                                        @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                                    </div>
                                </div>
                            </div>
                </div>
                <form enctype="multipart/form-data" class="form-horizontal" method="post" action="/Account/TenderUpdate">
                    <div class="col-sm-6 col-md-4" style="margin-top: 40px;width: 60%;">
                        <div class="thumbnail" style=" padding-top: 35px;">
                            <div class="form-group">
                                <label for="username" class="col-sm-4 control-label">Teklif Adı :</label>
                                <input class="form-control col-xs-12" required="" name="txtTENDERNAME" value="@tenders.TENDERNAME" placeholder="Teklif Adı" />
                            </div>
                            <div class="form-group">
                                <label for="username" class="col-sm-4 control-label">Açıklama :</label>
                                <input class="form-control" required="" name="txtTENDERNOTE" value="@tenders.TENDERNOTE" placeholder="Açıklama" />
                            </div>
                            <div class="form-group">
                                <label for="username" class="col-sm-4 control-label">Teklif Resmi :</label>
                                <input type="file" id="file" name="file" />
                                <button id="@tenders.ID" value="@tenders.ID" name="btnUpdate" class="btn btn-success col-sm-offset-4" style="float: left; margin-left: 290px;width: 110px;">Güncelle</button>
                            </div>
                        </div>
                    </div>
                   
                </form>
            }
                
        @*@Html.Partial("Counter")*@
    </div>
</div>



