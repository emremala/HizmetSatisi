
@{
    ViewBag.Title = "Cust";
}

@{
    ViewBag.Title = "Müşteri Paneli";
}
@if (Convert.ToBoolean(Session["CUST"]))
{
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3"style="margin-left:0px;width:100%;">
            <div class="row">
                <div class="col-xs-6 col-md-3">
                    <a href="#" class="thumbnail"style=" background-color: transparent; border: none;">
                        <img style = "width: 50%;" src="@Url.Content(Session["avatarimg"].ToString())" alt="avatar" />
                    </a>
                </div>
            </div>
            <br />
            <br />

            <div id="exTab1" class="container">
                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#1a" data-toggle="tab">Bilgileriniz</a>
                    </li>
                    <li>
                        <a href="#2a" data-toggle="tab">Verdiğiniz Teklifler</a>
                    </li>
                    <li>
                        <a href="#3a" data-toggle="tab">Onaylananlar</a>
                    </li>
                    <li>
                        <a href="#4a" data-toggle="tab">Tamamlanan Siparişler</a>
                    </li>
                </ul>
                
                <div class="tab-content clearfix">
                    <div class="tab-pane active" id="1a">
                        <br />
                        <table class="table table-bordered">
                            <thead class="thead-inverse">
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı Adınız</th>
                                    <th>Parola</th>
                                    <th>Adınız</th>
                                    <th>Email</th>
                                    <th>Üyelik Durumunuz</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (var user in ViewBag.CustInfo)
                                    {
                                <tr>
                                    <form class="form-horizontal" method="post" action="/Account/SelectUserInfo">
                                       
                                            <th style="text-align: center; line-height: 50px;" scope="row">1</th>
                                            <td style="text-align: center; line-height: 50px;">@user.USRNM</td>
                                            <td style="text-align: center; line-height: 50px;">1</td>
                                            <td style="text-align: center; line-height: 50px;">@user.FULNM</td>
                                            <td style="text-align: center; line-height: 50px;">@user.EMAIL</td>
                                            <td style="text-align: center; line-height: 50px;">@user.STATUS</td>

                                        
                                    </form>
                                </tr>
                                    }
                            </tbody>
                        </table>
                    </div>

                    <div class="tab-pane" id="2a">
                        <br />
                        <table class="table table-bordered">
                            <thead class="thead-inverse">
                                <tr>
                                    <th>#</th>
                                    <th>Teklif Adı</th>
                                    <th>Müşteri Adı</th>
                                    <th>İl</th>
                                    <th>İlçe</th>
                                    <th>Veriliş Tarihi</th>
                                    <th>Telefon</th>
                                    <th>E-mail</th>
                                    <th>Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var tenderad in ViewBag.TenderAD)
                                {
                                <tr>
                                  
                                       
                                        <th style="text-align: center; line-height: 50px;" scope="row">1</th>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.TENDERNAME</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.FULNM</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.COUNTRYNM</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.TOWNNM</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.TANDERDATE</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.TEL</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.EMAIL</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.NOTE</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.STATUS</td>
                                    
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="3a">
                        <br />
                        <table class="table table-bordered">
                            <thead class="thead-inverse">
                                <tr>
                                    <th>#</th>
                                    <th>Teklif Adı</th>
                                    <th>Müşteri Adı</th>
                                    <th>İl</th>
                                    <th>İlçe</th>
                                    <th>Veriliş Tarihi</th>
                                    <th>Telefon</th>
                                    <th>E-mail</th>
                                    <th>Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tenderadapp in ViewBag.TenderADApp)
                                {
                                    <tr>
                                        <form class="form-horizontal" method="post" action="/Account/ConfirmationADMIN">

                                            <th style="text-align: center; line-height: 50px;" scope="row">1</th>
                                            <td style="text-align: center; line-height: 50px;">@tenderadapp.TENDERNAME</td>
                                            <td style="text-align: center; line-height: 50px;">@tenderadapp.FULNM</td>
                                            <td style="text-align: center; line-height: 50px;">@tenderadapp.COUNTRYNM</td>
                                            <td style="text-align: center; line-height: 50px;">@tenderadapp.TOWNNM</td>
                                            <td style="text-align: center; line-height: 50px;">@tenderadapp.TANDERDATE</td>
                                            <td style="text-align: center; line-height: 50px;">@tenderadapp.TEL</td>
                                            <td style="text-align: center; line-height: 50px;">@tenderadapp.EMAIL</td>
                                            <td style="text-align: center; line-height: 50px;">@tenderadapp.NOTE</td>
                                            
                                            <td style="text-align: center; line-height: 50px;">
                                            
                                                <button id="@tenderadapp.ID" value="@tenderadapp.ID" name="BtnOde" class="btn btn-success col-sm-offset-4"style=" margin-left: 0px;">Ödeme Yap</button>
                                            </td>


                                        </form>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane" id="4a">
                        <br />
                        <table class="table table-bordered">
                            <thead class="thead-inverse">
                                <tr>
                                    <th>#</th>
                                    <th>Teklif Adı</th>
                                    <th>Müşteri Adı</th>
                                    <th>İl</th>
                                    <th>İlçe</th>
                                    <th>Veriliş Tarihi</th>
                                    <th>Telefon</th>
                                    <th>E-mail</th>
                                    <th>Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var tenderad in ViewBag.TenderADConf)
                                {
                                    <tr>


                                        <th style="text-align: center; line-height: 50px;" scope="row">1</th>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.TENDERNAME</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.FULNM</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.COUNTRYNM</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.TOWNNM</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.TANDERDATE</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.TEL</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.EMAIL</td>
                                        <td style="text-align: center; line-height: 50px;">@tenderad.NOTE</td>
                                       


                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-remove"></span>
        <span class="sr-only">Error:</span>
        Yetkiniz Yok.
    </div>
}


