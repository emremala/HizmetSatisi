
@{
    ViewBag.Title = "Manage";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-3" style="margin: 0 0 50px 0;">
        <div class="row">
            <div class="col-xs-6 col-md-3">
                <a href="#" class="thumbnail">
                    <img src="@Url.Content(Session["avatarimg"].ToString())" alt="avatar" />
                </a>
            </div>
        </div>
    </div>

    <table class="table table-bordered">
        <thead class="thead-inverse">
            <tr>
                <th>#</th>
                <th>Kullanıcı Adınız</th>
                <th>Parola</th>
                <th>Adınız</th>
                <th>Email</th>
                <th>Resminiz</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.UserUpdate)
            {
                <tr>
                    

                        <th style="text-align: center; line-height: 50px;" scope="row">1</th>
                        <td style="text-align: center; line-height: 50px;">@user.USRNM</td>
                        <td style="text-align: center; line-height: 50px;">@user.PWD</td>
                        <td style="text-align: center; line-height: 50px;">@user.FULNM</td>
                        <td style="text-align: center; line-height: 50px;">@user.EMAIL</td>
                        <td style="text-align: center; line-height: 50px;"><img style="width:100px;height:100px;" src="@Url.Content(@user.AVATAR)" alt="avatar" /></td>


                    
                </tr>
            }
        </tbody>
    </table>


    <div class="panel panel-default">
        <div class="panel-heading">Bilgilerinizi Güncelleyin</div>
        <div class="panel-body">
           @foreach (var user in ViewBag.UserUpdate) { 
            <form enctype="multipart/form-data" class="form-horizontal" method="post" action="/Account/SelectUserInfoChange">
                <div class="form-group">
                    <label for="fulname" class="col-sm-4 control-label">Adınız :</label>
                    <input class="form-control col-xs-12" name="txtFULNM" required=""  value="@user.FULNM"/>
                </div>
                <div class="form-group">
                    <label for="username" class="col-sm-4 control-label">Kullanıcı Adı :</label>
                    <input class="form-control col-xs-12" name="txtUSRNM"  value="@user.USRNM" />
                </div>
                <div class="form-group">
                    <label for="EMAIL" class="col-sm-4 control-label">E-mail :</label>
                    <input class="form-control col-xs-12" name="txtEMAIL" value="@user.EMAIL" />
                </div>
                <div class="form-group">
                    <label for="username" class="col-sm-4 control-label">Parola :</label>
                    <input class="form-control" name="txtPWD" type="password" value="@user.PWD" />
                </div>
                <div class="form-group">
                    <label for="username" class="col-sm-4 control-label">Profil :</label>
                    <input type="file" id="file" name="file" />
                </div>
                <button id="@user.ID" name="@user.ID" class="btn btn-success col-sm-offset-4"  value="@user.ID">Güncelle</button>
            </form>
            }
        </div>
    </div>

</div>

